{
  "name": "kolenka-frontend",
  "version": "0.2.1",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "serve:prod": "vue-cli-service serve --mode production",
    "build": "vue-cli-service build --mode staging && npm version patch --no-git-tag-version",
    "build-prod": "vue-cli-service build && npm version patch --no-git-tag-version",
    "release": "vue-cli-service build && npm version $TYPE -m \"$MESSAGE\" && git push && git push --tags",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "@caohenghu/vue-colorpicker": "^1.2.2",
    "axios": "^0.19.0",
    "babel-polyfill": "^6.26.0",
    "core-js": "^3.6.0",
    "highlight.js": "^9.17.1",
    "lodash": "^4.17.15",
    "logdown": "^3.3.0",
    "moment": "^2.24.0",
    "npm-check-updates": "^4.0.1",
    "popper.js": "^1.16.0",
    "prosemirror-state": "^1.3.2",
    "speakingurl": "^14.0.1",
    "spectre.css": "^0.5.8",
    "throttle-debounce": "^2.1.0",
    "tiptap": "^1.26.6",
    "tiptap-commands": "^1.12.5",
    "tiptap-extensions": "^1.28.6",
    "v-runtime-template": "^1.10.0",
    "vue": "^2.6.11",
    "vue-content-loading": "^1.6.0",
    "vue-meta": "^2.3.1",
    "vue-progressbar": "^0.7.5",
    "vue-router": "^3.1.3",
    "vue-scrollto": "^2.17.1",
    "vuex": "^3.1.2"
  },
  "devDependencies": {
    "@babel/plugin-proposal-object-rest-spread": "^7.7.7",
    "@vue/cli-plugin-babel": "^4.1.1",
    "@vue/cli-plugin-eslint": "^4.1.1",
    "@vue/cli-service": "^4.1.1",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.0.1",
    "node-sass": "^4.13.0",
    "prosemirror-tables": "^1.0.0",
    "sass": "^1.23.7",
    "sass-loader": "^8.0.0",
    "vue-template-compiler": "^2.6.11",
    "webpack-bundle-analyzer": "^3.6.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {
      "no-console": "off",
      "no-unused-vars": [
        "warn",
        {
          "varsIgnorePattern": "^_.*",
          "argsIgnorePattern": "^_.*"
        }
      ],
      "no-empty": "warn",
      "indent": [
        "warn",
        2
      ]
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "Edge 14"
  ]
}
